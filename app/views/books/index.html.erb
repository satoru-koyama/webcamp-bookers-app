<h4><%= notice %></h4>

<h2>Books</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete %></td>
    </tr>
  <% end %>
  </tr>
</table>

<section>
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  <%= form_with model: @book, url: create_books_path, method: :post, local: true do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <div>
      <%= f.submit 'Create Book'%>
    </div>
  <% end %>
</section>

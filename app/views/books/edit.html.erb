<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local: true do |f| %>
  <h2>Editing Book</h2>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div>
    <span>
      <%= f.submit 'Update Book' %>
    </span>
  </div>
<% end %>
<%= link_to 'Show', book_path(@book.id) %>
<%= link_to 'Back', books_path %>